@page "/employment/{Handler?}"
@model TaskManager.Pages.EmploymentModel

@{
    ViewData["Title"] = "Employment";
}

<link rel="stylesheet" href="/css/Background.css" />
<link rel="stylesheet" href="/css/Employment.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
<script src="~/js/site.js"></script>

<div class="Task">
    @foreach (var status in Model.Statuses)
    {
        <div class="column" id="column-@status.Name" ondrop="drop(event)" ondragover="allowDrop(event)" data-status="@status.Name">
            <h5 class="title-to-do">@status.Name</h5>
            <div class="tiles">
                @foreach (var item in Model.GroupedForms[status.Name])
                {
                    <div class="tile"
                         id="tile-@item.Id"
                         draggable="true"
                         ondragstart="drag(event)"
                         data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <div class="tile-title">@item.Title</div>
                        <div class="tile-task">@item.Task</div>
                    </div>
                }
                <div class="tile">
                     
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.SelectedForm?.Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>@Model.SelectedForm?.Task</p>
                <textarea type="text" placeholder="Title">@Model.SelectedForm?.Title</textarea>
                <textarea type="text" placeholder="Task">@Model.SelectedForm?.Task</textarea>
                <p><strong>Start Date:</strong> @Model.SelectedForm?.StartDate.ToString("dd.MM.yyyy")</p>
                <p><strong>End Date:</strong> @Model.SelectedForm?.EndDate.ToString("dd.MM.yyyy")</p>
                <p><strong>Status:</strong> @Model.SelectedForm?.Status</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
