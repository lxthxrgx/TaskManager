@page "/"
@model TaskManager.Pages.HomeModel
@{
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="/css/Background.css" />
<link rel="stylesheet" href="/css/Home.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

<div class="task-main-menu">
    <div class="my-tasks">
        <h4>My Tasks</h4>

        @foreach (var item in Model.UserEmployment)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.EmploymentName</h5>
                    <a href="@Model.BuildEmploymentUrl(item.EmploymentName)" class="btn btn-primary">Open</a>
                </div>
            </div>
        }

        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <div class="plus radius" data-bs-toggle="modal" data-bs-target="#exampleModal">
                </div>
            </div>
        </div>

    </div>

    <div class="another-tasks">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <div class="plus radius">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Employment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <textarea class="form-control" asp-for="NameEmployment"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" asp-page-handler="SaveEmployment">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

